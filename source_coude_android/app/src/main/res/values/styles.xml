<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#66ffe0</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_medium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
    <style name="image_circle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:shape">ring</item>
    </style>

    <style name="edt_search" parent="Widget.AppCompat.EditText">
        <item name="android:gradientRadius">12dp</item>
        <item name="android:background">#F8F7F7</item>
    </style>

</resources>
