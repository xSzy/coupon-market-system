<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/custom_background"
    tools:context=".home.tab_home.TabHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/distance_8">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/trend_coupon_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicatior"
                android:layout_width="match_parent"
                app:ci_drawable="@drawable/black_radius"
                android:layout_height="48dp"
                android:layout_alignTop="@id/trend_coupon_pager"
                android:layout_alignRight="@id/trend_coupon_pager"
                android:layout_alignEnd="@id/trend_coupon_pager"/>


        </RelativeLayout>
        
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/distance_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/distance_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/distance_16"
                    android:layout_marginBottom="@dimen/distance_8"
                    android:text="Bạn muốn tìm thể loại nào ?" />
            </RelativeLayout>

            <!--           something-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewListCategory"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="@dimen/distance_8"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Khuyến mãi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="xem thêm >" />
            </RelativeLayout>

            <!--           something-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Freeship" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="xem thêm >" />
            </RelativeLayout>

            <!--           something-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>


